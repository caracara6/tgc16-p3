{{#extends 'base'}}

{{#block "content"}}

<div class="m-3">

        <a role="button" class="btn btn-primary" href="/product-related/producer/create">List New Producer</a>


    <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
    {{#each producers}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td><img src="{{this.producer_image_url}}" class="img-fluid"/></td>
        <td>
            <a class="btn btn-primary btn-sm" href="/product-related/producer/{{this.id}}/update">Update</a>
            <a class="btn btn-danger btn-sm" href="/product-related/producer/{{this.id}}/delete">Delete</a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>

</div>

{{/block}}

{{/extends}}